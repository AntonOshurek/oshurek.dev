---
//styles
import '../styles/global/index.scss';
import '../styles/typography/typography.scss';
import '../styles/variables/variables.scss';
import './layout.scss';
//COMPONENTS
import Head from '../components/global/head/head.astro';
import Header from '../components/global/header/header.astro';
import Footer from '../components/global/footer/footer.astro';

interface Props {
	title: string;
	headerTitle?: string;
	description?: string;
	additionalClassToMain?: string;
	image?: string;
}

const { title, headerTitle, description, additionalClassToMain, image } = Astro.props;
---

<!doctype html>
<html lang="en">
	<Head title={title} description={description ? description : ''} image={image} />

	<body class="body">
		<Header headerTitle={headerTitle} />

		<main class={`main ${additionalClassToMain ? additionalClassToMain : ''}`}>
			<slot />
		</main>

		<Footer />
	</body>
</html>
