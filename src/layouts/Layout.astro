---
//styles
import '../styles/global/index.scss';
import '../styles/typography/index.scss';
import '../styles/variables/variables.scss';
import './layout.scss';
//COMPONENTS
import Head from '../components/head.astro';
import Header from '../components/header/header.astro';
import Footer from '../components/footer/footer.astro';

interface Props {
	title: string;
	headerTitle?: string;
	description?: string;
	additionalClassToMain?: string;
}

const { title, headerTitle, description, additionalClassToMain } = Astro.props;
---

<!doctype html>
<html lang="en">
	<Head title={title} description={description ? description : ''} />

	<body class="body">
		<Header headerTitle={headerTitle} />

		<main class={`main ${additionalClassToMain ? additionalClassToMain : ''}`}>
			<slot />
		</main>

		<Footer />
	</body>
</html>
