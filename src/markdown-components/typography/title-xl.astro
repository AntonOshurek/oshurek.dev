---
interface Props {
	headingTag: 'h1' | 'h2' | 'h3' | 'h4' | 'h5' | 'h6';
}

const { headingTag } = Astro.props;
---

{
	headingTag === 'h1' && (
		<h1 class="title-xl">
			<slot />
		</h1>
	)
}
{
	headingTag === 'h2' && (
		<h2 class="title-xl">
			<slot />
		</h2>
	)
}
{
	headingTag === 'h3' && (
		<h3 class="title-xl">
			<slot />
		</h3>
	)
}
{
	headingTag === 'h4' && (
		<h4 class="title-xl">
			<slot />
		</h4>
	)
}
{
	headingTag === 'h5' && (
		<h5 class="title-xl">
			<slot />
		</h5>
	)
}
{
	headingTag === 'h6' && (
		<h6 class="title-xl">
			<slot />
		</h6>
	)
}
