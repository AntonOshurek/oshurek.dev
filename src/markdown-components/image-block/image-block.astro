---
import { Image } from 'astro:assets';
//STYLES
import './image-block.scss';

interface Props {
	imagePath: string;
	imageAlt: string;
	width: number;
	height: number;
}

const { imagePath, imageAlt, width, height } = Astro.props;
---

<Image
	class="image-block"
	src={imagePath}
	alt={imageAlt}
	width={width}
	height={height}
	quality={'high'}
/>
