---
//LAYOUTS
import Layout from '@layouts/Layout.astro';
//COMPONENTS
import Banner from '@components/blocks/banner/banner.astro';
import RecentItemsLayout from '@layouts/recent-items-layout/recent-items-layout.astro';
//VARIABLES
import { BASE_URL, ROUTING } from '@variables/routing';
---

<Layout
	metaTitle={'Anton Oshurek dev'}
	headerTitle={'Anton Oshurek personal blog page'}
	metaImage={`${BASE_URL}/images/meta/meta-avatar.jpeg`}
	metaDescription="This is a personal blog where I (infrequently) write about code and other topics of interest to me."
>
	<Banner />

	<RecentItemsLayout collectionName="posts" link={ROUTING.POSTS.path} title="Recent posts" />

	<RecentItemsLayout
		collectionName="articles"
		link={ROUTING.ARTICLES.path}
		title="Recent articles"
	/>

	<RecentItemsLayout
		collectionName="projects"
		link={ROUTING.PROJECTS.path}
		title="Featured projects"
	/>
</Layout>
