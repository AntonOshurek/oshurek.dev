---
import './nav-button.scss';
---

<button class="nav-button" type="button">
	<span class="visually-hidden">open/close mobile navigation menu</span>

	<svg
		class="nav-button__burger"
		aria-hidden="true"
		focusable="false"
		viewBox="0 0 100 100"
		width="60"
		height="60"
	>
		<path
			class="nav-button__burger-line nav-button__burger-line--top"
			d="m 70,33 h -40 c 0,0 -6,1.368796 -6,8.5 0,7.131204 6,8.5013 6,8.5013 l 20,-0.0013"></path>
		<path class="nav-button__burger-line nav-button__burger-line--middle" d="m 70,50 h -40"></path>
		<path
			class="nav-button__burger-line nav-button__burger-line--bottom"
			d="m 69.575405,67.073826 h -40 c -5.592752,0 -6.873604,-9.348582 1.371031,-9.348582 8.244634,0 19.053564,21.797129 19.053564,12.274756 l 0,-40"
		></path>
	</svg>
</button>
