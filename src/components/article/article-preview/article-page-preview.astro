---
import type { CollectionEntry } from 'astro:content';
//STYLES
import './article-preview.scss';
//COMPONENTS
import DateTime from '../../shared/date-time/date-time.astro';
import Tags from '../../shared/tags/tags.astro';
//VARIABLES
import { BASE_URL } from '../../../variables/routing';

interface Props {
	article: CollectionEntry<'articles'>;
}

const { article } = Astro.props;
---

<header class="article-preview article-preview--page">
	<h1 class="article-preview__title title-l">
		{article.data.title}
	</h1>

	<DateTime date={article.data.date} format="full" additionalStyleClass="article-preview__date" />

	<Tags tags={article.data.tags} additionalStyleClass="article-preview__tags" />

	<p class="article-preview__overview paragraph-m">
		{article.data.overview}
	</p>

	<img
		class="article-preview__image"
		width="600"
		height="400"
		src={`${BASE_URL}${article.data.previewImage}`}
		alt={article.data.previewImageAlt}
	/>
</header>
