---
//STYLES
import './tags.scss';

interface Props {
	tags: string;
	additionalStyleClass?: string;
}

const { tags, additionalStyleClass } = Astro.props;

const cleanStr = tags.replace(/tags:|\s|,|-/g, ' ').trim();
const wordsArray = cleanStr.split(/\s+/).filter(Boolean);

const styleClasses = `${additionalStyleClass ? additionalStyleClass : ''}`;
---

<div class={`tags ${styleClasses}`}>
	{
		wordsArray.map((tag) => {
			return <h4 class="tags__tag paragraph-s-secondary">{tag}</h4>;
		})
	}
</div>
