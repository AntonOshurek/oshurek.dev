---
import type { CollectionEntry } from 'astro:content';
//STYLES
import './project-preview.scss';
//COMPONENTS
import ProjectTags from './project-tags/project-tags.astro';

interface Props {
	project: CollectionEntry<'projects'>;
}

const { project } = Astro.props;

const articleDate = new Date(project.data.date);
const d = new Date(articleDate);

const options: Intl.DateTimeFormatOptions = {
	year: 'numeric',
};

const formattedDate = new Intl.DateTimeFormat('en-GB', options).format(d);
---

<article class="project-preview project-preview--horizontal">
	<h3 class="project-preview__title project-title">{project.data.title}</h3>

	<time class="project-preview__date project-date" datetime={d.toISOString()}>{formattedDate}</time>

	<!-- <h4 class="project-preview__tags project-tags">{project.data.tags}</h4> -->
	<ProjectTags tags={project.data.tags} />

	<p class="project-preview__description project-paragraph">
		{project.data.overview}
	</p>

	<img
		class="project-preview__image"
		src="https://previews.123rf.com/images/epicfail/epicfail1702/epicfail170200239/72740134-thin-line-design-concept-for-project-website-banner.jpg"
		alt=""
		width="246"
		height="180"
	/>

	<a class="project-preview__link" href={`/project/${project.slug}`}>
		<span class="visually-hidden">open full project description</span>
	</a>
</article>
