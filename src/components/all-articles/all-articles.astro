---
import { getCollection } from 'astro:content';
//STYLES
import './all-articles.scss';
//COMPONENTS
import ArticlePreview from '../article-preview/article-preview.astro';
import ArticleItems from '../article-items/article-items.astro';
//UTILS
import { sortArticles } from '../../utils/sort-articles';

const defaultArticles = await getCollection('articles');
const articles = sortArticles(defaultArticles);
---

<div class="all-articles container-medium">
	<h2 class="all-articles__title">Articles</h2>

	<ArticleItems dirrection="column" additionalClasses="recent-articles__items" underline>
		{
			articles.map((article) => {
				return <ArticlePreview article={article} withLink={true} />;
			})
		}
	</ArticleItems>
</div>
