{
	"extends": "astro/tsconfigs/base",
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"@components/*": [
				"src/components/*"
			],
			"@content/*": [
				"src/content/*"
			],
			"@images/*": [
				"src/images/*"
			],
			"@layouts/*": [
				"src/layouts/*"
			],
			"@markdown-components/*": [
				"src/markdown-components/*"
			],
			"@pages/*": [
				"src/pages/*"
			],
			"@variables/*": [
				"src/variables/*"
			],
			"@utils/*": [
				"src/utils/*"
			]
		}
	},
}
